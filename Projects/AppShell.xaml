<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Projects.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Projects"
    xmlns:views="clr-namespace:Projects.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="False">

    <ShellContent
        Title="Main"
        ContentTemplate="{DataTemplate views:ProjectsPage}"
        Route="LoginPage" />

    <TabBar>
        <Tab
            Title="Início"
            Icon="home.png"
            Route="MainPage">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>



        <Tab
            Title="Projetos"
            Icon="project.png"
            Route="ProjectsPage">
            <ShellContent ContentTemplate="{DataTemplate views:ProjectsPage}" />
        </Tab>

        <Tab
            Title="Perfil"
            Icon="profile.png"
            Route="ProfilePage">
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" />
        </Tab>

    </TabBar>


</Shell>
