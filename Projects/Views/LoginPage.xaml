<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Projects.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mvvm="clr-namespace:Projects.ViewModels"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    Title="LoginPage"
    x:DataType="mvvm:LoginViewModel">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="MontserratSemibold"/>
                <Setter Property="TextColor" Value="Black"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <StackLayout Padding="0,20,0,0">
        <Label
            HorizontalOptions="Center"
            Text="Seja Bem vindo(a) ao"
            VerticalOptions="Center" />

        <Label
            HorizontalOptions="Center"
            Text="PROJECTS"
            FontSize="50"
            VerticalOptions="Center" />

        <StackLayout  VerticalOptions="CenterAndExpand" Padding="10,0,10,20" Spacing="10">
            <material:TextField Title="Name" Text="{Binding Name}" />

            <material:TextField Title="Senha" IsPassword="True" Text="{Binding Senha}"/>

            <Label Text="Esqueceu a Senha?" TextColor="Gray" HorizontalOptions="End" Margin="0,2,0,0"/>

            <Button StyleClass="ElevatedButton" Text="Acessar" FontFamily="MontserratSemibold" Margin="0,80,0,0" Command="{Binding LoginCommand}"/>

        </StackLayout>

        <HorizontalStackLayout Spacing="5" HorizontalOptions="Center" Padding="0,0,0,20">
            <Label Text="NÃ£o Tem Conta?"/>

            <Label Text="Clique Aqui"
                   TextColor="Blue">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToAddUserlPageCommand}"/>
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>

        
    </StackLayout>
</ContentPage>